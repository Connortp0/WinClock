<Window x:Class="WinClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WinClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="25" Width="125" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Foreground="White" WindowStartupLocation="Manual" Top="0" Left="0" ShowInTaskbar="False">
    <Grid>
        <TextBlock x:Name="clock" Text="00:00:00 AM" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="117" TextAlignment="Center" FontSize="20" FontWeight="Normal" FontStyle="Normal" TextDecorations="{x:Null}"/>
    </Grid>
</Window>
